<!-- BEGIN JINJA FORMATTING ADAPTATION CITATION 2 -->
{% extends "main.j2" %}
{% block content %}

<main>
    <h2 class="table_title">Customer Information</h2>    

<!-- BEGIN TAB FORMATTING ADAPTATION CITATION 3 -->
        <div class="tabs">
            <div class="tab">
                <input type="radio" id="tab-1" name="tab-group-1" checked>
                <label for="tab-1" id="tab_name">Add</label>
                <div class="content">
                    <article>
                        <form action="/customers/", method="post">
                            <fieldset>
                                <legend>Add Customer</legend>
                                <p>
                                * Fields are required.
                                </P>
                                <input
                                    type="text"
                                    placeholder="* First Name"
                                    name="first_name"
                                    required/>
                                <input
                                    type="text"
                                    placeholder="* Last Name"
                                    name="last_name"
                                    required/>               
                                <input
                                    type="text"
                                    placeholder="* Street Address"
                                    name="address"
                                    required/>
                                <input
                                    type="text"
                                    placeholder="* City"
                                    name="city"
                                    required/>
                                <input
                                    type="text"
                                    placeholder="* State"
                                    name="state"
                                    required/>
                                <input
                                    type="text"
                                    placeholder="* Zipcode"
                                    name="zipcode"
                                    required/>
                                <input
                                    type="text"
                                    placeholder="* Email"
                                    name="email"/>
                                <input
                                    type="tel"
                                    placeholder="* Phone 000-000-0000"
                                    pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                                    name="phone"
                                    required
                                    title="000-000-0000"/>             
                                <br/>                              
                                <input type="submit" value="Add" name="add_customer" class="btn"/>
                            </fieldset>
                            </form>
                        </article>
                </div> 
            </div>
            <div class="tab">
                <input type="radio" id="tab-2" name="tab-group-1">
                <label for="tab-2" id="tab_name">Update</label>       
                <div class="content">
                    <article>
                        <form action="/customers/" method="post">
                            <fieldset>
                                <legend>Update Customer</legend>
                                <label>Select Customer</label>
                                <select name="cust_ID">
                                    {% if dropdown_data %}
                                        {% for item in dropdown_data %}
                                            <option value="{{ item['customer_id'] }}">{{ item['Name'] }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                                <br/>
                                <input type="submit" value="Update" name="edit_customer" class="btn">
                            </fieldset>
                        </form>
                    </article>
                </div> 
            </div> 

            <div class="tab">
                <input type="radio" id="tab-3" name="tab-group-1">
                <label for="tab-3" id="tab_name">Delete</label>       
                <div class="content">
                    <article>
                        <form action="/customers/", method="post">
                            <fieldset>
                                <legend>Delete Customer</legend>
                                <label>Select Customer</label>
                                <select name="cust_ID">
                                    {% if dropdown_data %}
                                        {% for item in dropdown_data %}
                                            <option value={{ item['customer_id'] }}>{{ item['Name'] }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                                
                                <br/>
                                <input type="submit" value="Delete" name="delete_customer" class="btn" onclick="return confirm('Are you sure you want to delete the selected customer?')" >
                            </fieldset>
                        </form>
                    </article>
                </div> 
            </div>
        </div>
<!-- END TAB FORMATTING ADAPTATION CITATION 3 -->

    <table>
        {% if customers %}
            <thead>
                <tr>
                    {% for key in customers[0].keys() %}
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for item in customers %}
                    <tr>
                        {% for key in item.keys() %}
                            <td> {{item[key]}} </td> 
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        {% endif %}
    </table>
</main> 

{% endblock %}

<!-- END JINJA FORMATTING ADAPTATION CITATION 2 -->
